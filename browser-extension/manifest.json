{
  "manifest_version": 3,
  "name": "Agent0 Screenshot Capture",
  "version": "1.0.0",
  "description": "Capture screenshots and send them to Agent0 AI assistant",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Capture screenshot"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
