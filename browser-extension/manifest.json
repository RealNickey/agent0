{
  "manifest_version": 3,
  "name": "Agent0 Companion",
  "version": "1.0.0",
  "description": "Send selected text and captured images to Agent0",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture image"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
